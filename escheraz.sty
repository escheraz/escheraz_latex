%===============================THEOREM BOXES===============================
\usepackage{thmtools}
\usepackage[framemethod = TikZ]{mdframed}

\mdfsetup{linewidth = 0.3mm, innertopmargin = 2mm, innerbottommargin = 2mm, innerleftmargin = 3mm, innerrightmargin = 3mm, skipbelow=-0.2cm} 

\newcommand{\thmboxstyle}[4]{
	\mdfdefinestyle{#2}{linecolor = #3, backgroundcolor = #4, nobreak = true}
	\declaretheoremstyle[headfont = \sffamily\bfseries\color{#3}, mdframed = {style = #2}, headpunct = {\\[0.4pt]}, postheadspace = {0pt}]{#1}
}

%box colors
\thmboxstyle{claimbox}{mdgraybox}{Black}{Gray!20}
\thmboxstyle{exbox}{mdredbox}{Purple}{Red!08}
\thmboxstyle{lemmabox}{mdgreenbox}{OliveGreen!40!JungleGreen}{Emerald!8}
\thmboxstyle{thmbox}{mdbluebox}{NavyBlue!60!ProcessBlue}{ProcessBlue!10}
\thmboxstyle{corollarybox}{mdyellowbox}{Goldenrod!40!Dandelion}{BurntOrange!5}
\thmboxstyle{defbox}{mdpinkbox}{Lavender!40!Magenta}{Rhodamine!8}
\thmboxstyle{notebox}{mdorangebox}{Orange!50!Brown}{Yellow!5!Olive!5}

